    <h2>Actions:</h2>
    <div>
        <table id="actionsTable" class="table table-striped table-responsive table-hover">
            <thead>
                <tr>
                    
                    <th>Description</th>
                    <th>Owner</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Resolution</th>
                    <th>Due</th>
                    <th>Opened</th>
                    <th>Closed</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (ProjectAction projectAction in Model.Actions) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => projectAction.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => $"{projectAction.OwnerLastName}, {projectAction.OwnerFirstName}")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => projectAction.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => projectAction.Priority)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => projectAction.Resolution)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => projectAction.DateDue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => projectAction.DateOpened)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => projectAction.DateClosed)
                        </td>
                        <td>
                            @using(Html.BeginForm("DeleteAction","Actions"))
                             {
                               <input type="hidden" name="ActionId" value="@projectAction.Id" />
                               <input type="submit" value="Delete" />
                             }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
