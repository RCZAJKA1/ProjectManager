                <td>Owner: <select id="ownerId" name="OwnerId">
                                    @foreach(ActionOwner owner in Model.Owners)
                                    {
                                        <option value="@owner.Id">@owner.LastName, @owner.FirstName</option>
                                    }
                            </select>
                </td>
            </tr>
        </table>
    </form>

